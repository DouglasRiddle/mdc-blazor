@namespace SsExample.Pages.Examples

<ParameterSection>
    <div>
        Expected Layout<br /><pre><code>@(@"<MdcCard>
    <MdcCardContent>
        Html Content
        <MdcCardButtons>
            <MdcCardButton />
        </MdcCardButtons>
        <MdcCardIcons>
            <MdcCardIcon />
            <MdcCardIconToggle />
        </MdcCardIcons>
    </MdcCardContent>
</MdcCard>")</code></pre>
    </div>

    <div>
        Universal Parameters<br />
        <strong>Class</strong> (<code>string</code>)<br /><em>Optional</em><br />Used to pass CSS class names
    </div>
    <div><strong>Id</strong> (<code>string</code>)<br /><em>Optional</em><br />Used to pass component id string</div>
    <div><strong>Style</strong> (<code>string</code>)<br /><em>Optional</em><br />Used to pass inline-CSS</div>

    <MdcDivider />

    <div>
        <code>MdcCard</code> Parameters<br />
        <strong>DisplayType</strong> (<code>MdcCardDisplay</code>)<br /><em>Optional</em><br />Values: <code>MdcCardDisplay.elevated</code> (default), <code>outlined</code><br />Used to set the card display type
    </div>

    <MdcDivider />

    <div>
        <code>MdcCardContent</code> Parameters<br />
        <strong>ContentType</strong> (<code>MdcCardContentType</code>)<br /><strong>Required</strong><br />Values: <code>MdcCardDisplay.actions</code>, <code>media</code>, <code>primaryaction</code>, <code>text</code><br />Used to set the <a href="https://material.io/develop/web/components/cards/#card-contents" target="_blank">card content type</a>
    </div>
    <div>
        <strong>MediaType</strong> (<code>MdcCardMedia</code>)<br />
        <em>Optional</em><br />
        Used to set the card content media type<br />
        <code>background</code>: An absolutely-positioned box the same size as the media area, for displaying a title or icon on top of the background-image.<br />
        <code>square</code>: Automatically scales the media area’s height to equal its width.<br />
        <code>widescreen</code>: Automatically scales the media area’s height according to its width, maintaining a 16:9 aspect ratio.<br />
        Values: <code>MdcCardMedia.none</code> (default), <code>background</code>, <code>square</code>, <code>widescreen</code>
    </div>
    <div><strong>OnClick</strong> (<code>@("EventCallback<MouseEventArgs>")</code>)<br /><em>Optional</em><br />Used to pass parameter to run on MdcCardContent area click</div>

    <MdcDivider />

    <div>
        <code>MdcCardButton</code> Parameters<br />
        <strong>Label</strong> (<code>string</code>)<br /><strong>Required</strong><br />Used to set button text
    </div>
    <div><strong>OnClick</strong> (<code>@("EventCallback<MouseEventArgs>")</code>)<br /><em>Optional</em><br />Used to pass parameter to run on button click</div>
    <div><strong>Type</strong> (<code>MdcButtonType</code>)<br /><em>Optional</em><br />Values: <code>MdcButtonType.button</code> (default), <code>submit</code><br />Used to set button type.</div>

    <MdcDivider />

    <div>
        <code>MdcCardIcon</code> Parameters<br />
        <strong>Icon</strong> (<code>string</code>)<br /><strong>Required</strong><br />Set <a href="https://material.io/resources/icons/?style=baseline" target="_blank">Material Icon</a>
    </div>
    <div><strong>OnClick</strong> (<code>@("EventCallback<MouseEventArgs>")</code>)<br /><em>Optional</em><br />Used to pass parameter to run on button click</div>
    <div><strong>Title</strong> (<code>string</code>)<br /><strong>Required</strong><br />Used to set the text to display on icon hover</div>
    <div><strong>Type</strong> (<code>MdcButtonType</code>)<br /><em>Optional</em><br />Values: <code>MdcButtonType.button</code> (default), <code>button</code><br />Used to set button type.</div>

    <MdcDivider />

    <div>
        <code>MdcCardIconToggle</code> Parameters<br />
        <strong>Icon_Off</strong> (<code>string</code>)<br /><strong>Required</strong><br />Set <a href="https://material.io/resources/icons/?style=baseline" target="_blank">Material Icon</a> for <code>true</code> value
    </div>
    <div><strong>Icon_On</strong> (<code>string</code>)<br /><strong>Required</strong><br />Set <a href="https://material.io/resources/icons/?style=baseline" target="_blank">Material Icon</a> for <code>false</code> value</div>
    <div><strong>OnClick</strong> (<code>@("EventCallback<MouseEventArgs>")</code>)<br /><em>Optional</em><br />Used to pass parameter to run on button click</div>
    <div><strong>Title</strong> (<code>string</code>)<br /><strong>Required</strong><br />Used to set the text to display on icon hover</div>
    <div><strong>Type</strong> (<code>MdcButtonType</code>)<br /><em>Optional</em><br />Values: <code>MdcButtonType.button</code> (default), <code>button</code><br />Used to set button type.</div>
    <div><strong>Value</strong> (<code>bool</code>)<br /><strong>Required</strong><br />Used to track and set icon off/on status.</div>
</ParameterSection>
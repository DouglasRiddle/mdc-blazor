@namespace SsExample.Pages.Examples

<ParameterSection>
    <div>
        Expected Layout<br /><pre><code>@(@"<MdcSelect>
    <MdcSelectOption />
    <MdcSelectOption />
</MdcSelect>")</code></pre>
    </div>

    <div>
        <code>MdcSelect</code> Parameters<br />
        <strong>Class</strong> (<code>string</code>)<br /><em>Optional</em><br />Used to pass CSS class names
    </div>
    <div><strong>Disabled</strong> (<code>bool</code>)<br /><em>Optional</em><br />Used to set select enabled/disabled state</div>
    <div><strong>Id</strong> (<code>string</code>)<br /><em>Optional</em><br />Used to pass component id string</div>
    <div><strong>IsInitialDialogFocus</strong> (<code>bool</code>)<br /><em>Optional</em><br />Used only when this element is within an MdcDialog. True value indicates this element should be focused on dialog open.</div>
    <div><strong>Label</strong> (<code>string</code>)<br /><strong>Required</strong><br />Used to set select label text</div>
    <div><strong>MenuPositionFixed</strong> (<code>bool</code>)<br /><em>Optional</em><br />Sets the select menu list to a fixed position. This allows displaying beyond the borders of a dialog container.</div>
    <div><strong>OnChange</strong> (<code>EventCallBack</code>)<br /><em>Optional</em><br />Use to set method to call when select value changes</div>
    <div><strong>SelectStyle</strong> (<code>MdcSelectStyle</code>)<br /><em>Optional</em><br />Values: <code>MdcSelectStyle.flat</code> (default), <code>outlined</code><br />Used to set select type.</div>
    <div><strong>Style</strong> (<code>string</code>)<br /><em>Optional</em><br />Used to pass inline-CSS</div>
    <div><strong>Value</strong> (<code>string</code>)<br /><strong>Required</strong><br />Value of the selected option</div>

    <MdcDivider />

    <div>
        <code>MdcSelectOption</code> Parameters<br />
        <strong>Class</strong> (<code>string</code>)<br /><em>Optional</em><br />Used to pass CSS class names
    </div>
    <div><strong>Disabled</strong> (<code>bool</code>)<br /><em>Optional</em><br />Used to set select option enabled/disabled state</div>
    <div><strong>Label</strong> (<code>string</code>)<br /><strong>Required</strong><br />Used to set select option text</div>
    <div><strong>Style</strong> (<code>string</code>)<br /><em>Optional</em><br />Used to pass inline-CSS</div>
    <div><strong>Value</strong> (<code>T</code>)<br /><strong>Required</strong><br />Value of the select option</div>
</ParameterSection>